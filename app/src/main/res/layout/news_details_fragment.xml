<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    >
  <com.google.android.material.card.MaterialCardView
      android:layout_width="match_parent"
      android:layout_margin="8dp"
      android:layout_height="wrap_content"
      >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:paddingBottom="16dp"
        android:layout_height="wrap_content"
        >
      <ImageView
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          tools:src="@color/purple_500"
          android:id="@+id/imageView"
          android:layout_width="0dp"
          android:scaleType="fitXY"
          android:layout_height="200dp"
          />
      <TextView
          android:layout_width="wrap_content"
          android:id="@+id/dateTextView"
          tools:text="April 3,2017"
          app:layout_constraintEnd_toEndOf="@id/imageView"
          app:layout_constraintBottom_toBottomOf="@id/imageView"
          android:layout_margin="8dp"
          android:textColor="@color/white"
          android:layout_marginEnd="16dp"
          android:layout_gravity="end"
          android:layout_height="wrap_content"
          />
      <TextView
          android:layout_marginTop="8dp"
          android:id="@+id/titleImageView"
          app:layout_constraintStart_toStartOf="@id/imageView"
          android:layout_marginStart="16dp"
          android:layout_marginEnd="16dp"
          android:textSize="20sp"
          app:layout_constraintEnd_toEndOf="@id/imageView"
          app:layout_constraintTop_toBottomOf="@id/imageView"
          tools:text="Amazing Image the best science photoes of the week"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          />
      <TextView
          app:layout_constraintStart_toStartOf="@id/titleImageView"
          app:layout_constraintTop_toBottomOf="@id/titleImageView"
          android:layout_width="wrap_content"
          tools:text="By Abdalla Elnaggar"
          android:id="@+id/authorTextView"
          android:layout_height="wrap_content"
          />
      <TextView
          android:layout_width="0dp"
          android:id="@+id/contentTextView"
          android:layout_marginTop="16dp"
          tools:text="Amazing Image the best science photoes of the week
                Amazing Image the best science photoes of the week
                Amazing Image the best science photoes of the week
                Amazing Image the best science photoes of the week
                Amazing Image the best science photoes of the week
                Amazing Image the best science photoes of the week
                Amazing Image the best science photoes of the week
                Amazing Image the best science photoes of the week"
          app:layout_constraintTop_toBottomOf="@id/authorTextView"
          app:layout_constraintStart_toStartOf="@id/authorTextView"
          app:layout_constraintEnd_toEndOf="@id/imageView"
          android:layout_height="wrap_content"
          />


    </androidx.constraintlayout.widget.ConstraintLayout>
  </com.google.android.material.card.MaterialCardView>
  <Button
      android:layout_margin="8dp"
      android:layout_width="match_parent"
      android:textColor="@color/white"
      android:textSize="20sp"
      android:text="OPEN WEBSITE"
      android:background="@color/black"
      android:layout_height="52dp"/>
</LinearLayout>